@model CarIn.Models.ViewModels.RegisterNewUserVm

@{
    ViewBag.Title = "RegisterNewUser";
}
<div id="formContainer" class="span12">


@using (Html.BeginForm("RegisterNewUser", "Home", FormMethod.Post, new {autocomplete = "off" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <h2>Registrera ny användare</h2>

        @{
           if(!string.IsNullOrEmpty(Model.ErrorMessage))
           {
               <span class="ErrorMessage">@Model.ErrorMessage</span>
           } 
            
        }

        <div class="editor-label">
            @Html.LabelFor(model => model.NewUsername)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewUsername)
            @Html.ValidationMessageFor(model => model.NewUsername)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewPassword)
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmNewPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmNewPassword)
            @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
        </div>

        <p>
            <input type="submit" value="Spara" class="btn btn-green"/>
            @Html.ActionLink("Tillbaka", "Index", "Home", null, new { @class = "btn btn-blue"})

        </p>
    </fieldset>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
